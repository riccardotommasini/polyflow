@base <http://base/> .
@prefix ex: <http://www.example.org/ontology#> .
@prefix activity: <http://www.example.org/ontology/activity/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .
@prefix ssn: <http://www.w3.org/ns/ssn/> .

### Contexts ###

[] a ex:NormalSituation ;
    ex:forPerson <person/1> ;
    ex:forActivity activity:resting ;
    ex:expectedHeartRate     [ ex:lowerBound 70 ; ex:upperBound 100 ] ;
    ex:expectedBreathingRate [ ex:lowerBound 12 ; ex:upperBound 25 ] ;
    ex:expectedOxygenSaturation   [ ex:lowerBound 0.95 ; ex:upperBound 1.00 ] ;
    rdfs:comment "Context describing Rut's expected parameter values when resting"@en .

[] a ex:Context ;
    ex:hasPerson <person/1> ;
    ex:forActivity activity:tv ;
    ex:expectedHeartRate     [ ex:lowerBound 70 ; ex:upperBound 100 ] ;
    ex:expectedBreathingRate [ ex:lowerBound 16 ; ex:upperBound 28 ] ;
    ex:expectedOxygenSaturation   [ ex:lowerBound 0.95 ; ex:upperBound 1.00 ] ;
    rdfs:comment "Context describing Rut's expected parameter values when watching TV"@en .

[] a ex:Context ;
    ex:hasPerson <person/1> ;
    ex:forActivity activity:exercising ;
    ex:expectedHeartRate     [ ex:lowerBound 100 ; ex:upperBound 125 ] ;
    ex:expectedBreathingRate [ ex:lowerBound 25 ; ex:upperBound 40 ] ;
    ex:expectedOxygenSaturation   [ ex:lowerBound 0.95 ; ex:upperBound 1.00 ] ;
    rdfs:comment "Context describing Rut's expected parameter values when exercising"@en .

[] a ex:Context ;
    ex:hasPerson <person/1> ;
    ex:forActivity activity:sleeping ;
    ex:expectedHeartRate     [ ex:lowerBound 60 ; ex:upperBound 80 ] ;
    ex:expectedBreathingRate [ ex:lowerBound 12 ; ex:upperBound 20 ] ;
    ex:expectedOxygenSaturation   [ ex:lowerBound 0.95 ; ex:upperBound 1.00 ] ;
    rdfs:comment "Context describing Rut's expected parameter values when sleeping"@en .


### Persons ###

<person/1>
    a foaf:Person ;
    foaf:age 71 ;
    foaf:name "Rut" ;
    ex:partner <person/2> ;
    ex:home <person/1/home> ;
    rdfs:comment "This resource represents Rut in the use-case scenario"@en .

<person/2>
    a foaf:Person ;
    foaf:age 70 ;
    foaf:name "Arne" ;
    ex:partner <person/1> ;
    rdfs:comment "This resource represents Rut's partner in the use-case scenario"@en .


### Observable properties ###

<person/1/activity>
    a sosa:ObservableProperty ;
    sosa:isObservedBy <sensor/system> ;
    ssn:isPropertyOf <person/1> ;
    rdfs:label "Feature generated by the system representing Rut's current activity"@en .

<person/1/heart_rate>
    a sosa:ObservableProperty ;
    sosa:isObservedBy <sensor/heart_rate/1> ;
    ssn:isPropertyOf <person/1> ;
    rdfs:label "Measure of a Rut's heart rate"@en .

<person/1/oxygen>
    a sosa:ObservableProperty ;
    sosa:isObservedBy <sensor/oxygen/1> ;
    ssn:isPropertyOf <person/1> ;
    rdfs:label "Measure of a Rut's oxygen saturation"@en .

<person/1/breathing_rate>
    a sosa:ObservableProperty ;
    sosa:isObservedBy <sensor/breathing_rate/1> ;
    ssn:isPropertyOf <person/1> ;
    rdfs:label "Measure of a Rut's breathing rate"@en .

<person/1/location>
    a sosa:ObservableProperty ;
    sosa:isObservedBy <sensor/location/1> ;
    ssn:isPropertyOf <person/1> ;
    rdfs:label "Reports Rut's current location"@en .

<person/2/location>
    a sosa:ObservableProperty ;
    sosa:isObservedBy <sensor/location/2> ;
    ssn:isPropertyOf <person/2> ;
    rdfs:label "Reports Rut's partner's current location"@en .


### Sensors###

<sensor/system>
    a sosa:Sensor ;
    sosa:observes <person/1/activity> ;
    rdfs:comment "System derived observations reporting Rut's current activity" .

<sensor/heart_rate/1>
    a sosa:Sensor ;
    sosa:observes <person/1/heart_rate> ;
    rdfs:comment "Sensor measuring the Rut's heart rate" .

<sensor/oxygen/1>
    a sosa:Sensor ;
    sosa:observes <person/1/oxygen_saturation> ;
    rdfs:comment "Sensor measuring the Rut's oxygen saturation" .

<sensor/breathing_rate/1>
    a sosa:Sensor ;
    sosa:observes <person/1/breathing_rate> ;
    rdfs:comment "Sensor measuring the Rut's breathing rate" .

<sensor/location/1>
    a sosa:Sensor ;
    sosa:observes <person/1/location> ;
    rdfs:comment "Sensor indicating whether Rut is at home or not" .

<sensor/location/2>
    a sosa:Sensor ;
    sosa:observes <person/2/location> ;
    rdfs:comment "Sensor indicating whether Rut's partner is at home or not" .